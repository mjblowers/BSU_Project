@model BSU_BackPackToGithub.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h2>Create Github Repository</h2>
    <div class="shadowBox row align-items-center">
        <form asp-action="Create" method="post" class="main-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-6 form-group">

                    <label asp-for="First_Name" class="control-label">First Name</label>
                    <input asp-for="First_Name" placeholder="First Name" class="form-control" />
                    <span asp-validation-for="First_Name" class="text-danger"></span>

                </div>
                <div class="col-sm-6 form-group">
                    <label asp-for="Last_Name" class="control-label">Last Name</label>
                    <input asp-for="Last_Name" placeholder="Last Name" class="form-control" />
                    <span asp-validation-for="Last_Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BSU_Username" class="control-label">BSU Username</label>
                <input asp-for=@Model.BSU_Username class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="GitHub_Username" class="control-label">Github Username</label>
                <input asp-for="GitHub_Username" placeholder="johnDoe117" class="form-control" />
                <span asp-validation-for="GitHub_Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repo" class="control-label">Repository</label>
                <input asp-for="Repo" class="form-control" />
                <span asp-validation-for="Repo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="classid">Class</label>
                <select name="classid" id="classid" class="form-control">
                    <option value="CS253-1-f19">CS253-1-f19</option>
                    <option value="CS253-2-f19">CS253-2-f19</option>
                    <option value="CS453-1-f19">CS453-1-f19</option>
                    <option value="CS453-2-f19">CS453-2-f19</option>
                    <option value="CS361-1-f19">CS361-1-f19</option>
                    <option value="CS-HU250-1-f19">CSHU250-1-f19</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
